<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".activities.UltimateResultActivity">


    <TextView
        android:id="@+id/tv_final_message1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You have reached the pinnacle of this game!"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_finale"
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_letsmultiply_finale"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_final_message1" />

    <TextView
        android:id="@+id/tv_final_message2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go! Share this game and multiply."
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_finale" />

    <Button
        android:id="@+id/btn_final_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorButton"
        android:text="Close"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:layout_marginTop="25dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_final_message2" />


</androidx.constraintlayout.widget.ConstraintLayout>